<?xml version="1.0" encoding="utf-8" ?>
<project xmlns="http://nant.sourceforge.net/release/0.85/nant.xsd">
  <!--
  In order for the unit tests to run successfully
  after a VS 2005 build, some extra NAnt DLLs must
  be copied to the output folder of the test project.
  -->
  <copy todir="${directory::get-current-directory()}" flatten="true">
    <fileset basedir="${nant::get-base-directory()}" failonempty="true">
      <include name="NAnt.DotNetTasks.dll" />
      <include name="NAnt.Win32Tasks.dll" />
    </fileset>
  </copy>

  <!--
  And we have to copy the NAnt config file, renamed as our
  own config file so that NUnit finds it by default.
  -->
  <fail unless="${property::exists('test.config')}" message="Property test.config must be passed into this build script"/>
  <copy 
    file="${nant::get-base-directory()}\NAnt.exe.config"
    tofile="${directory::get-current-directory()}\${test.config}"/>
</project>